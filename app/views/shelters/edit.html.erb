<div class="container">

<h1>Editing <%= @shelter.name %></h1>


<%= form_tag(shelter_url(@shelter), method: 'patch') do %>

  <div>
    <%= label_tag :name %><br />
    <%= text_field_tag :name, @shelter.name %>
  </div>

  <div>
    <%= label_tag :street_address %><br />
    <%= text_field_tag :street_address, @shelter.street_address %>
  </div>

  <div>
    <%= label_tag :city %><br />
    <%= text_field_tag :city, @shelter.city %>
  </div>

  <div>
    <%= label_tag :state %><br />
    <%= text_field_tag :state, @shelter.state %>
  </div>

  <div>
    <%= label_tag :zip %><br />
    <%= number_field_tag :zip, @shelter.zip %>
  </div>

  <div>
    <%= label_tag :phone_number %><br />
    <%= text_field_tag :phone_number, @shelter.phone_number %>
  </div>

  <div>
    <%= label_tag :total_beds %><br />
    <%= number_field_tag :total_beds, @shelter.total_beds %>
  </div>

  <div>
    <%= label_tag :open_beds %><br />
    <%= number_field_tag :open_beds, @shelter.open_beds %>
  </div>

    <br>

  <div>
    <%= submit_tag "Update Shelter", :class => "btn btn-primary" %>
  </div>

<% end %>

</div>
