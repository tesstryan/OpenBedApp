<div class="container">

  <h2><%= notice %></h2>

<% flash.each do |key, value| %>
<div class="alert alert-danger"><%= value %></div>
<% end %>

  <div class="col-md-6">
  <%= form_tag shelters_url, method: 'post' do %>

    <h2>Shelter Details</h2>

      <div class="form-group">
        <div>
          <%= label_tag :name %><br />
          <%= text_field_tag :name, nil, :placeholder => "Shelter Name", :class => "form-control"  %>
        </div>
      </div>

      <div class="form-group">
        <div>
          <%= label_tag :street_address %><br />
          <%= text_field_tag :street_address, nil, :placeholder => "Street Address", :class => "form-control"  %>
        </div>
      </div>

      <div class="form-group">
        <div>
          <%= label_tag :city %><br />
          <%= text_field_tag :city, nil, :placeholder => "City", :class => "form-control"  %>
        </div>
      </div>

      <div class="form-group">
        <div>
          <%= label_tag :state %><br />
          <%= text_field_tag :state, nil, :placeholder => "State", :class => "form-control"  %>
      </div>

      <div class="form-group">
        <div>
          <%= label_tag :zip %><br />
          <%= number_field_tag :zip, nil, :placeholder => "Zip Code", :class => "form-control"  %>
        </div>
      </div>

      <div class="form-group">
        <div>
          <%= label_tag :phone_number %><br />
          <%= telephone_field_tag :phone_number, nil, :placeholder => "Phone Number", :class => "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div>
          <%= label_tag :total_beds %><br />
          <%= number_field_tag :total_beds, nil, :placeholder => "Total Number of Beds", :class => "form-control"  %>
        </div>
      </div>

      <div class="form-group">
        <div>
          <%= label_tag :email %><br />
          <%= text_field_tag :email, nil, :placeholder => "email@gmail.com", :class => "form-control"  %>
        </div>
      </div>

      <div class="form-group">
        <div>
          <%= label_tag :password, "Password" %><br />
          <%= password_field_tag :password, nil, :placeholder => "Password", :class => "form-control"  %>
        </div>
      </div>

      <div class="form-group">
        <div>
          <%= label_tag :password_confirmation, "Password Confirmation" %><br />
          <%= password_field_tag :password_confirmation, nil, :placeholder => "Confirm Password", :class => "form-control"  %>
        </div>
      </div>

      <div>
        <%= submit_tag "Register Shelter & Login Information", :class => "btn btn-primary" %>
        <br>
      </div>
    <% end %>
  </div>


</div>


